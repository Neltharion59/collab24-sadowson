[inn_u_stand]
{
	[text*]
	{
		screen_text = "Could of picked a better time to visit Shroomington, eh? Someone's gotta drive these Crystal Mages out to wherever they came from! The guards got all hands busy, and the Slingers out there are walking about in broad Shroomlight!";
	}
}
[inn_v_stand]
{
	[text*]
	{
		screen_text = "I've been to Shroomington before, but never that long. We're essentially stuck here. By now I've lost all sense of day and night. It feels weird, but to these people it's normal, I guess...";
