event OnGoHandleMessage$( eWorldEvent e$, WorldMessage )
{
	if( e$ == WE_ENTERED_WORLD )
	{
		if( voice_type$ == "NONE" )
		{
			if( btaskcomplete$ == FALSE )
			{
				btaskcomplete$ = TRUE;
				
				int List_Voice_Type_Length$;
				int Rand_Voice$;
				string Selected_Voice$;
				
				if( owner.Go.Actor.IsMale == true )
				{
					//Set a Male Voice Type.
					List_Voice_Type_Length$ = StringTool.GetNumDelimitedValues( Voice_Types_Male$ ) - 1;
					Rand_Voice$ 			= GoMath.RandomInt( 0, List_Voice_Type_Length$ );
					Selected_Voice$			= StringTool.GetDelimitedString( VA_ENEMY_SPOTTED$, Rand_Voice$ );
				}
				else
				{
					// Set a Female Voice Type.
					List_Voice_Type_Length$ = StringTool.GetNumDelimitedValues( Voice_Types_Female$ ) - 1;
					Rand_Voice$ 			= GoMath.RandomInt( 0, List_Voice_Type_Length$ );
					Selected_Voice$ 		= StringTool.GetDelimitedString( VA_ENEMY_SPOTTED$, Rand_Voice$ );
				}
				
				VA_DIE$ 			= StringTool.Append( Selected_Voice$, "_die" );
				VA_ENEMY_SPOTTED$ 	= StringTool.Append( Selected_Voice$, "_enemy_spotted" );
				VA_ATTACK$			= StringTool.Append( Selected_Voice$, "_attack" );
				
				voice_type$ = Selected_Voice$;
			}
		}
		
	}
	
	if( e$ == WE_ENEMY_SPOTTED )
	{
		int List_Voice_Type_Length$;
		int Rand_Voice$;
		string	Selected_Voice$;
		
		List_Voice_Type_Length$ = StringTool.GetNumDelimitedValues( VA_ENEMY_SPOTTED$ ) - 1;
		Rand_Voice$				= GoMath.RandomInt( 0, List_Voice_Type_Length$ );
		Selected_Voice$			= StringTool.GetDelimitedString( VA_ENEMY_SPOTTED$, Rand_Voice$ );
		if( Selected_Voice$ != "" )
		{
			owner.Go.PlayVoiceSound( Selected_Voice$, 6.0, 35.0, false );
		}
	}
	
	if( e$ == WE_KILLED )
	{
		
	}
	
}